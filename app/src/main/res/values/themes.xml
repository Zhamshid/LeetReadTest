<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Kitapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>

        <!--        &lt;!&ndash; specify enter and exit transitions &ndash;&gt;-->
<!--        <item name="android:windowEnterTransition">@transition/explode</item>-->
<!--        <item name="android:windowExitTransition">@transition/explode</item>-->

<!--        &lt;!&ndash; specify shared element transitions &ndash;&gt;-->
<!--        <item name="android:windowSharedElementEnterTransition">-->
<!--            @transition/change_image_transform</item>-->
<!--        <item name="android:windowSharedElementExitTransition">-->
<!--            @transition/change_image_transform</item>-->

    </style>

    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabBackground">@color/black</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="background">@color/background_color</item>
        <item name="itemBackground">@color/background_color</item>
        <item name="itemIconTint">@drawable/bottom_navigation_item_background_color</item>
        <item name="android:textColor">@drawable/bottom_navigation_item_background_color</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>


    <style name="tab_text" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/text_color</item>
        <item name="tabSelectedTextColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="title_text" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    
    
    <style name="TabLayoutTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/background_tab_layout_text</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextColor">@color/tab_layout_color_inactive</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabPaddingStart">20dp</item>
        <item name="tabPaddingEnd">20dp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@drawable/splash_image</item>

    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>